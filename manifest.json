{
  "manifest_version": 3,
  "name": "tabmax",
  "version": "1.0.1",
  "description": "A simple extension to save, organise, and restore tab sessions in folders",

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "tabmax"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module" 
  },

  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "unlimitedStorage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}